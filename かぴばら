<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>カードバトル vs CPU</title>
  <style>
    body { text-align: center; font-family: sans-serif; margin-top: 40px; }
    .card {
      display: inline-block;
      width: 80px;
      height: 120px;
      line-height: 120px;
      border: 2px solid #333;
      border-radius: 10px;
      margin: 8px;
      font-size: 32px;
      cursor: pointer;
      transition: 0.3s all;
      user-select: none;
      position: relative;
    }
    .card:hover { transform: scale(1.1); background-color: #f0f0f0; }
    .selected { background-color: #ffda79; border-color: #ff8c00; }

    #cpuCard { font-size: 36px; margin-top: 20px; position: relative; display: inline-block; transition: 0.5s all; }
    .cpu-animate { transform: translateY(-30px) scale(1.2); }

    #result { font-size: 28px; margin-top: 20px; font-weight: bold; transition: 0.3s all; }
    .result-animate { transform: scale(1.3); }

    #scoreBoard { margin-top: 30px; font-size: 20px; }
    button { margin-top: 20px; padding: 8px 20px; font-size: 18px; cursor: pointer; }
  </style>
</head>
<body>
  <h1>カードバトル vs CPU</h1>
  <h2>カードをクリックして対戦しよう</h2>

  <div id="cardArea"></div>

  <div id="cpuCard">CPUのカード: ？</div>
  <div id="result">勝負の結果がここに表示されます</div>

  <div id="scoreBoard">
    🏆 あなた: <span id="playerScore">0</span>　
    💀 CPU: <span id="cpuScore">0</span>
  </div>

  <button id="resetBtn">スコアをリセット</button>

  <script>
    const cards = [1,2,3,4,5,6,7,8];
    const cardArea = document.getElementById("cardArea");
    const cpuCardText = document.getElementById("cpuCard");
    const resultText = document.getElementById("result");
    const playerScoreEl = document.getElementById("playerScore");
    const cpuScoreEl = document.getElementById("cpuScore");

    let playerScore = 0;
    let cpuScore = 0;

    // カード表示
    cards.forEach(num => {
      const div = document.createElement("div");
      div.className = "card";
      div.textContent = num;
      div.addEventListener("click", () => play(num, div));
      cardArea.appendChild(div);
    });

    function play(playerNum, element) {
      // 選択ハイライトのみ
      document.querySelectorAll(".card").forEach(c => c.classList.remove("selected"));
      element.classList.add("selected");

      // CPUランダムカード
      const cpuNum = cards[Math.floor(Math.random() * cards.length)];
      cpuCardText.textContent = `CPUのカード: ${cpuNum}`;
      cpuCardText.classList.remove("cpu-animate");
      setTimeout(() => cpuCardText.classList.add("cpu-animate"), 50);

      // --- 同点即終了ルール ---
      if (playerNum === cpuNum) {
        alert("⚖ 同じ数字！ゲームは同点で終了！");
        resetGame();
        return;
      }

      // 勝敗判定（偶奇ルール）
      let winner = "";
      if ((playerNum % 2 === cpuNum % 2)) {
        winner = (playerNum > cpuNum) ? "player" : "cpu";
      } else {
        winner = (playerNum < cpuNum) ? "player" : "cpu";
      }

      // スコア加算＆結果表示
      if (winner === "player") {
        playerScore++;
        resultText.textContent = "YOU WIN!";
        resultText.style.color = "green";
      } else if (winner === "cpu") {
        cpuScore++;
        resultText.textContent = "YOU LOSE…";
        resultText.style.color = "red";
      }

      // スコア表示更新
      playerScoreEl.textContent = playerScore;
      cpuScoreEl.textContent = cpuScore;

      // 結果アニメーション
      resultText.classList.remove("result-animate");
      setTimeout(() => resultText.classList.add("result-animate"), 50);

      // 4ポイント到達でゲーム終了
      if (playerScore >= 4) {
        setTimeout(() => { alert("YOU WIN! ゲーム終了"); resetGame(); }, 600);
      } else if (cpuScore >= 4) {
        setTimeout(() => { alert("YOU LOSE… ゲーム終了"); resetGame(); }, 600);
      }
    }

    function resetGame() {
      playerScore = 0;
      cpuScore = 0;
      playerScoreEl.textContent = 0;
      cpuScoreEl.textContent = 0;
      cpuCardText.textContent = "CPUのカード: ？";
      resultText.textContent = "勝負の結果がここに表示されます";
      resultText.style.color = "black";
      document.querySelectorAll(".card").forEach(c => c.classList.remove("selected"));
      cpuCardText.classList.remove("cpu-animate");
      resultText.classList.remove("result-animate");
    }

    document.getElementById("resetBtn").addEventListener("click", resetGame);
  </script>
</body>
</html>
